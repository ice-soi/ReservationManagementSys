<!DOCTYPE html>
<html>
<head>
    <title>PORTENT</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/timepicki.css" />
    <link rel="stylesheet" href="~/css/fonts.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/default.css" />
    <link rel="stylesheet" href="~/css/jquery.jscrollpane.css" />
    <link rel="stylesheet" href="~/css/calendar.css" />
    <script type="text/javascript" src="~/scripts/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="~/scripts/jquery-ui.js"></script>
    <script type="text/javascript" src="~/scripts/timepicki.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.scrollify.min.js"></script>    
    <script type="text/javascript" src="~/scripts/scroll.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.jscrollpane.min.js"></script>
</head >
    <body>
        <div class="main">
            <input type="hidden" id="base-date" value="" />
            <section class="section">
                <div class="center" data-section-name="Month">
                    <div class="fieldWrap">
                        <div class='title'>
                            <span class="prev-anchor month">&lt;&nbsp;&nbsp;</span>
                            <span></span>
                            <span class="next-anchor month">&nbsp;&nbsp;&gt;</span>
                        </div>
                        <div>
                            <ol class="dayofweek">
                                <li class="">
                                    <ul>
                                        <li class="dow sun">Sunday</li>
                                        <li class="dow">Monday</li>
                                        <li class="dow">Tuesday</li>
                                        <li class="dow">Wednesday</li>
                                        <li class="dow">Thursday</li>
                                        <li class="dow">Friday</li>
                                        <li class="dow sat">Saturday</li>
                                    </ul>
                                </li>
                            </ol>
                        </div>
                        <div>
                            <ol class="calendar" start="6">
                                <li id="lastmonth">
                                    <ul>
                                    </ul>
                                </li>
                                <li id="thismonth">
                                    <ul>
                                    </ul>
                                </li>
                                <li id="nextmonth">
                                    <ul>
                                    </ul>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="center" data-section-name="Week">
                    <div class="fieldWrap">
                        <div class='title'>
                            <span class="prev-anchor week">&lt;&nbsp;&nbsp;</span>
                            <span></span>
                            <span class="next-anchor week">&nbsp;&nbsp;&gt;</span>
                        </div>
                        <div>
                            <ol class="dayofweek">
                                <li class="weeks">
                                    <ul>
                                    </ul>
                                </li>
                            </ol>
                        </div>
                        <div>
                            <ol class="calendar" start="6">
                                <li id="thisweek">
                                    <ul>
                                    </ul>
                                </li>

                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="center" data-section-name="Day">
                    <div class="fieldWrap">
                        <div class='title'>
                            <span class="prev-anchor day">&lt;&nbsp;&nbsp;</span>
                            <span></span>
                            <span class="next-anchor day">&nbsp;&nbsp;&gt;</span>
                        </div>
                        <ol class="calendar" start="6">
                            <li id="thisday">
                                <ul>
                                    <li class="am">AM</li>
                                    <li class="pm">PM</li>
                                </ul>
                            </li>
                        </ol>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="center" data-section-name="Schedule">
                    <div class="fieldWrap">
                        <div class='title'>
                            Schedule
                        </div>
                        <div class='content'>
                            <input type="hidden" id="data-id" value="" />
                            <input type="hidden" id="data-rev" value="" />
                            <div class="lbl-title">
                                <label>Start</label>
                                <span class="error"></span>
                            </div>
                            <div>
                                <table cellpadding="1" cellspacing="1">
                                    <tr>
                                        <td class="input-td">
                                            <input type="text" readonly id="from-date" class="textbox txt-date" />
                                        </td>
                                        <td>
                                            <input type="text" readonly id="from-time" class="textbox txt-time" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="lbl-title">
                                <label>End</label>
                            </div>
                            <div class="">
                                <table cellpadding="1" cellspacing="1">
                                    <tr>
                                        <td class="input-td">
                                            <input type="text" readonly id="to-date" class="textbox txt-date" />
                                        </td>
                                        <td>
                                            <input type="text" readonly id="to-time" class="textbox txt-time" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="lbl-title">
                                <label>Title</label>
                                <span class="error"></span>
                            </div>
                            <div>
                                <input type="text" id="title" maxlength="40" class="textbox txt-title" />
                            </div>
                            <div class="lbl-title">
                                <label>Remarks</label>
                                <span class="error"></span>
                            </div>
                            <div>
                                <textarea id="remarks" maxlength="200" cols="70" rows="3" class="textbox txt-remarks"></textarea>
                            </div>
                            <div class='tips'>
                                <a href="#" class="fl add" onclick="saveItem()">
                                    <span>Add</span>
                                </a>
                                <a href="#" class="fl update" onclick="saveItem()">
                                    <span>Update</span>
                                </a>
                                <a href="#" class="fl delete" onclick="deleteItem()">
                                    <span>Delete</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <ul class="pager" id="js-pager"></ul>
        </div>
        <script type="text/javascript" src="~/scripts/util.js"></script>
        <script type="text/javascript" src="~/scripts/index.js"></script>
    </body>
</html>
